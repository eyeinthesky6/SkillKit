{
  "name": "@trinity-os/skillkit",
  "version": "0.0.2",
  "description": "Terminal-aware workflow orchestration + Anthropic skills integration for AI-assisted development",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "tsk": "./dist/cli.js"
  },
  "files": [
    "dist",
    "src",
    "templates"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/cli.ts",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "coverage": "vitest run --coverage",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "type-check": "tsc --noEmit",
    "format": "prettier --write \"**/*.{ts,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,json,md}\"",
    "clean": "rimraf dist coverage .skillkit test-dx-skill test-input.json",
    "prepare": "husky install",
    "prepublishOnly": "pnpm run build",
    "release": "standard-version",
    "docs:dev": "cd docs-site && pnpm start",
    "docs:build": "cd docs-site && pnpm build",
    "docs:serve": "cd docs-site && pnpm serve"
  },
  "keywords": [
    "skills",
    "automation",
    "workflow",
    "sandbox",
    "typescript"
  ],
  "author": "Trinity OS Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/eyeinthesky6/SkillKit.git"
  },
  "homepage": "https://github.com/eyeinthesky6/SkillKit#readme",
  "bugs": {
    "url": "https://github.com/eyeinthesky6/SkillKit/issues"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@types/inquirer": "^9.0.9",
    "@types/picomatch": "^4.0.2",
    "chalk": "^5.6.2",
    "commander": "^14.0.2",
    "date-fns": "^4.1.0",
    "fs-extra": "^11.3.2",
    "gray-matter": "^4.0.3",
    "inquirer": "^12.10.0",
    "js-yaml": "^4.1.0",
    "marked": "^16.4.1",
    "minimatch": "^10.1.1",
    "openskills": "^1.0.0",
    "ora": "^9.0.0",
    "picomatch": "^4.0.3",
    "uuid": "^13.0.0",
    "yaml": "^2.8.1",
    "zod": "^3.24.1",
    "zod-to-json-schema": "^3.24.6"
  },
  "devDependencies": {
    "@oclif/core": "^4.8.0",
    "@oclif/plugin-autocomplete": "^3.2.39",
    "@types/fs-extra": "^11.0.4",
    "@types/js-yaml": "^4.0.9",
    "@types/json-schema": "^7.0.15",
    "@types/node": "^24.10.0",
    "@typescript-eslint/eslint-plugin": "^8.46.3",
    "@typescript-eslint/parser": "^8.46.3",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "prettier": "^3.6.2",
    "standard-version": "^9.5.0",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^4.0.6"
  },
  "packageManager": "pnpm@8.15.3"
}
