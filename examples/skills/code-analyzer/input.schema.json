{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["path"],
  "properties": {
    "path": {
      "type": "string",
      "description": "Path to the code directory or file to analyze"
    },
    "extensions": {
      "type": "array",
      "description": "File extensions to include (e.g., ['.ts', '.js'])",
      "items": {
        "type": "string"
      },
      "default": [".js", ".ts", ".jsx", ".tsx"]
    },
    "excludePatterns": {
      "type": "array",
      "description": "Patterns to exclude (e.g., ['node_modules', 'dist'])",
      "items": {
        "type": "string"
      },
      "default": ["node_modules", "dist", "build", "coverage"]
    },
    "includeTests": {
      "type": "boolean",
      "description": "Whether to include test files in analysis",
      "default": false
    }
  }
}


